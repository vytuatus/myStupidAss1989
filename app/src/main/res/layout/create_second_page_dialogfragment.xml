<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <EditText
            android:id="@+id/editText_add_band_name"
            android:layout_below="@+id/imageHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your band name here"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/textView_band_name"
            android:layout_below="@+id/editText_add_band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_select_music_style"
            android:layout_below="@+id/textView_band_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Music Style"/>
        <TextView
            android:id="@+id/textView_picked_music_style"
            android:layout_below="@+id/textView_band_name"
            android:layout_toRightOf="@+id/button_select_music_style"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="text" />
        <TextView
            android:id="@+id/select_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/second_page_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/second_page_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>
</ScrollView>