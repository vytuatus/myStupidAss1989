<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="500dp">
        <TextView
            android:id="@+id/textView_band_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write your band description below"
            android:gravity="center"
            android:layout_marginTop="30dp"/>
        <EditText
            android:id="@+id/editText_thirdpage_add_band_description"
            android:layout_below="@+id/textView_band_description"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="300dp"
            android:hint="Band name description"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/third_page_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Band"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/third_page_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:padding="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>
</ScrollView>